--this is lite, expect lesser features.
repeat task.wait() until game:IsLoaded() 
local RunService = game:GetService("RunService")
local VirtualUser = game:GetService("VirtualUser")
local lplr = game:GetService("Players").LocalPlayer
local lplrcframe = lplr.Character.HumanoidRootPart.CFrame
local ReplicatedStorage = game:GetService("ReplicatedStorage")
getgenv().autocollect = nil
getgenv().antiafk = nil
getgenv().equipbest = nil
getgenv().equipbestdelay = 0.3
RunService.Stepped:Connect(function()
    if autocollect then
        for i,v in pairs(workspace.CurrencyDrops:GetChildren()) do
            v.CFrame = lplr.Character.HumanoidRootPart.CFrame
        end
    end
end)
lplr.Idled:Connect(function()
   if antiafk then
      VirtualUser:ClickButton2(Vector2.new())
   end
end)
task.spawn(function()
    while true do
        task.wait()
        if equipbest then
          ReplicatedStorage.Packages._Index:FindFirstChild("sleitnick_knit@1.4.7").knit.Services.NukeService.RE.EquipBest:FireServer()
          else
              break
        end
    end
end)
local vape = loadstring(game:HttpGet"https://raw.githubusercontent.com/dawid-scripts/UI-Libs/main/Vape.txt")()
local win = vape:Window("PISSWARE LITE",Color3.fromRGB(138,43,226), Enum.KeyCode.RightControl)

local automatic = win:Tab("Automatic")
automatic:Toggle("Auto-Collect",false,function(v)
autocollect = v
end)
automatic:Toggle("Anti-AFK",false,function(v)
antiafk = v
end)
automatic:Toggle("Auto equip best pet",false,function(v)
equipbest = v 
end)
