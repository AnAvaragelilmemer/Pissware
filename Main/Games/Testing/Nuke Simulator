--this is lite, expect lesser features and less blatant features
--also
repeat task.wait() until game:IsLoaded() 
local RunService = game:GetService("RunService")
local VirtualUser = game:GetService("VirtualUser")
local lplr = game:GetService("Players").LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")
--remotes
local equippets = ReplicatedStorage.Packages._Index:FindFirstChild("sleitnick_knit@1.4.7").knit.Services.NukeService.RE.EquipBest
local collectchest = ReplicatedStorage._Index:FindFirstChild("sleitnick_knit@1.4.7").knit.Services.ChestService.RE.Claim
local tp = ReplicatedStorage.Packages._Index:FindFirstChild("sleitnick_knit@1.4.7").knit.Services.TeleporterService.RF.TeleportTo
getgenv().autocollect = nil
getgenv().antiafk = nil
getgenv().equipbest = nil
getgenv().equipbestdelay = 0.3
RunService.Stepped:Connect(function()
    if autocollect then
        for i,v in pairs(workspace.CurrencyDrops:GetChildren()) do
            v.CFrame = lplr.Character.HumanoidRootPart.CFrame
        end
    end
end)
lplr.Idled:Connect(function()
   if antiafk then
      VirtualUser:ClickButton2(Vector2.new())
   end
end)
function equipbestpets()
    while equipbest and task.wait() do
        equippets:FireServer()
        task.wait(equipbestdelay)
    end
end

local vape = loadstring(game:HttpGet"https://raw.githubusercontent.com/dawid-scripts/UI-Libs/main/Vape.txt")()
local win = vape:Window("PISSWARE LITE",Color3.fromRGB(138,43,226), Enum.KeyCode.RightControl)

local automatic = win:Tab("Automatic")
automatic:Toggle("Auto-Collect",false,function(v)
autocollect = v
end)
automatic:Toggle("Anti-AFK",false,function(v)
antiafk = v
end)
automatic:Toggle("BestPets",false,function(v)
equipbest = v 
equipbestpets()
end)
automatic:Slider("BestPets delay",0.1,10,3, function(t)
equipbestdelay = v
end)
automatic:Toggle("AutoChest",false,function(v)
while v and task.wait() do
    collectchest:FireServer("NormalChest")
end
end)
local teleports = win:Tab("Teleports")
teleports:Label("Note: you can teleport to it once you the place")
teleports:Button("Nuke Shop", function()
    tp:InvokeServer("Nuke Shop")
end)
