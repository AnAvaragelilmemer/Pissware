local lplr = game.Players.LocalPlayer
local workspace = game.Workspace
local chlplr = lplr.Character.Humanoid
local speed = chlplr.WalkSpeed
local jump = chlplr.JumpPower
local gravity = workspace.Gravity
local executor = identifyexecutor()

local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))();
local Window = library.CreateLib("pissware : MOBILE", "Synapse");
local home = Window:NewTab("Home");

--home inspired by Vision hub

local user = home:NewSection("Hello, "..lplr.DisplayName.."!");

user:NewDropdown("info for your roblox account", "didnt i said it.", {"Name: "..lplr.DisplayName, "ID: "..lplr.UserId, "Language: "..lplr.LocaleId}, function(currentOption)
    print(currentOption)
end);

user:NewDropdown("Misc", "Additional information", {"executor: "..executor, "Ping: "..lplr.GetNetworkPing() * (1000)}, function(currentOption)
    print(currentOption)
end)

